generator client {
  provider = "prisma-client-js"
}

// ⚠️ LOCAL: sqlite kullan
// ✅ PRODUCTION: postgresql olarak değiştir
datasource db {
  provider  = "sqlite"      // Production'da "postgresql" yap
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // PostgreSQL için uncomment et
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isPro     Boolean  @default(false)
  credits   Int      @default(3)

  polarSubscriptionId String?
  polarCustomerId     String?
}
